#top{
  background-image: url("<%= asset_path('nenetestver.jpeg') %>");
  width:100vw;
  height:70vh;
  background-repeat: no-repeat;
  background-size:cover;
  background-position:50%;
  position: relative;

}

#step{
  margin:2rem;
}

#maintitle{
  position: absolute;
  top: 30%;
  left: 50%;
  -ms-transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  margin:0;
  padding:0;
}

#login{
  display:flex;
  position: absolute;
  top: 30%;
  left: 50%;
  -ms-transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  margin:7rem 0 0 0;
  padding:0;
}

.linkto{
  text-decoration: none;
  color: white; 
}

#social{
  display:flex;
}

#h2_under_line{
  background: linear-gradient(transparent 50%, #FEA443 40%);
}

#letter{
  display:block;
  margin-left: auto;
  margin-right: auto
  width:500px;
}

#livepreview{
  background-image: url("<%= asset_path('letterbackground.001.jpeg') %>");
  background-size:contain;
  background-repeat:no-repeat;
  height:430px;
  width:301px;
  font-family:"huifont";
}