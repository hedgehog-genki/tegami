#top{
  background-image: url("<%= asset_path('nenetop.jpeg') %>");
  width:100vw;
  height:70vh;
  background-repeat: no-repeat;
  background-size:cover;
  background-position:50%;
  position: relative;
  border:none;
}

#step{
  margin:2rem;
}

#maintitle{
  position: absolute;
  top: 30%;
  left: 50%;
  -ms-transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  margin:0;
  padding:0;
  font-size:10rem;
  color: transparent;
}

#maintitleheader{
  text-stroke: 1px black;
  -webkit-text-stroke: 1px black;
  color:orange;
}

#subtitle{
  font-size:3rem;
  font-family:"huifont";
}

#login{
  display:flex;
  position: absolute;
  top: 50%;
  left: 50%;
  -ms-transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  margin:15rem 0 0 0;
  padding:0;
}

.linkto{
  text-decoration: none;
  color: white; 
}

#social{
  display:flex;
}

#h2_under_line{
  background: linear-gradient(transparent 50%, #FEA443 40%);
}

#letter{
  display:block;
  margin-left: auto;
  margin-right: auto;
  width:75vw;
}

#livepreview{
  background-image: url("<%= asset_path('letterbackground.001.jpeg') %>");
  background-size:contain;
  background-repeat:no-repeat;
  height:430px;
  width:301px;
  font-family:"huifont";
  font-size:0.5rem;
}

#mypage{
  margin:2rem;
}

#letteredit{
  margin:auto;
  width:75vw;
}

#success{
  margin:auto;
  width:75vw;
}

#mypageshow{
  margin:auto;
  width:75vw;
}

#mypageicon{
  margin:15px;
}

/* タブレット表示時 */
@media (max-width: 1024px) {
  #top{
  width:100vw;
  }

  #maintitle{
  top:40%;
  }

  #subtitle{
  font-size:1.5rem;
  }

  #step{
   margin:1rem;
   padding:0.5rem;
  }

  #mypage{
   margin:1rem;
  }

}

@media (max-width: 767px) {

  body{
  margin:auto;
  }
  #top{
  width:100vw;
  }

  #step{
   margin:0,5rem;
   padding:0.5rem;
   width:720px;
   font-size:0.7rem;
  }
}

@media (max-width: 599px) {

  body{
  margin:auto;
  }

  #step{
  display:none;
  }

  #mypage{
  margin:1rem;
  }

  #maintitle{
  font-size:4.5rem;
  }
}